# ── Google Cloud ─────────────────────────────────────────────
GCP_PROJECT=operaciones-br
GCP_REGION=us-central1
SERVICE_ACCOUNT=operaciones-br@appspot.gserviceaccount.com

# ── BigQuery ─────────────────────────────────────────────────
BQ_DATASET=sales_intelligence

# ── Cloud Run ────────────────────────────────────────────────
CLOUD_RUN_SERVICE=sales-intelligence-api
# TTL do cache interno da API (segundos)
CACHE_TTL_SECONDS=120

# ── Gemini AI ────────────────────────────────────────────────
# Obtenha em: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# ── Firebase ─────────────────────────────────────────────────
FIREBASE_SITE=x-gtm
