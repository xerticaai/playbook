FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY cloud-function/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY cloud-function /app/cloud-function

ENV PORT=8080
EXPOSE 8080

CMD ["functions-framework", "--source=cloud-function/main.py", "--target=cloud_run_dispatch", "--port=8080"]
